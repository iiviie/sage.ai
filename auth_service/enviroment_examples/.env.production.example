# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# This configuration uses real AWS services and Supabase
# Copy this file to .env.production and fill in the values
# NEVER commit this file with real credentials!
# ============================================================================

# Environment
ENVIRONMENT=production
DEBUG=false

# ============================================================================
# DATABASE - Supabase PostgreSQL
# ============================================================================
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# Get from Supabase project settings -> Database -> Connection string
DATABASE_URL=postgresql://postgres:your-supabase-password@db.your-project-ref.supabase.co:5432/postgres

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from Supabase project settings -> API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================================================
# SECURITY - JWT Configuration
# ============================================================================
# Generate a strong secret with: openssl rand -hex 32
SECRET_KEY=your-production-secret-key-must-be-strong-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# GOOGLE OAUTH2 - Production
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
# Use your production API domain
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/v1/auth/google/callback

# ============================================================================
# FRONTEND - Production Domain
# ============================================================================
FRONTEND_URL=https://yourdomain.com

# ============================================================================
# CORS - Allowed Origins (JSON array format)
# ============================================================================
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# ============================================================================
# AWS PRODUCTION CONFIGURATION
# ============================================================================

# AWS Region
AWS_REGION=us-east-1

# AWS Credentials (Optional - use IAM roles in Lambda instead)
# Leave empty if using IAM roles (recommended)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Configuration
S3_BUCKET_NAME=sage-prod-content
# Optional: CloudFront CDN domain if using
S3_CLOUDFRONT_DOMAIN=https://d123456.cloudfront.net

# API Gateway URL
# This is your production API endpoint
API_GATEWAY_URL=https://api.yourdomain.com

# Lambda Function Name
LAMBDA_FUNCTION_NAME=sage-auth-service

# CloudWatch Log Group
CLOUDWATCH_LOG_GROUP=/aws/lambda/sage-auth-service

# ============================================================================
# SECURITY & MONITORING (Optional)
# ============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Force HTTPS
FORCE_HTTPS=true
