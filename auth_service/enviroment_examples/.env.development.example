# ============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ============================================================================
# This configuration uses LocalStack to mock AWS services locally
# Copy this file to .env.development and fill in the values
# ============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# DATABASE - Local PostgreSQL (via Docker)
# ============================================================================
DATABASE_URL=postgresql://sage_user:sage_password@postgres:5432/sage_auth_db

# ============================================================================
# SECURITY - JWT Configuration
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-to-a-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# GOOGLE OAUTH2 - Development
# ============================================================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ============================================================================
# FRONTEND - Local Development
# ============================================================================
FRONTEND_URL=http://localhost:3000

# ============================================================================
# CORS - Allowed Origins (comma-separated)
# ============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]

# ============================================================================
# LOCALSTACK - AWS Service Mocking
# ============================================================================
LOCALSTACK_ENDPOINT=http://localstack:4566

# AWS Credentials (dummy values for LocalStack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# S3 Configuration (LocalStack)
S3_BUCKET_NAME=sage-dev-content
S3_ENDPOINT_URL=http://localstack:4566

# Lambda Configuration (LocalStack)
LAMBDA_ENDPOINT_URL=http://localstack:4566

# API Gateway URL (LocalStack)
API_GATEWAY_URL=http://localstack:4566

